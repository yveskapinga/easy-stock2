function processSearchInput() {
    if (searchMode === 'barcode') {
        // Mode scan de code barre
        const input = $('#barcode-input').val().trim();
        if (!input) {
            showError('Veuillez saisir un code barre');
            return;
        }
        
        if (/^\d+$/.test(input) && input.length >= 3) {
            hideSearchResults();
            scanArticle(input);
        } else {
            // Recherche par nom
            searchProductsInstant(input);
        }
    } else {
        // Mode recherche
        const input = $('#product-search-input').val().trim();
        if (!input) {
            showError('Veuillez saisir un nom de produit');
            return;
        }
        
        // Lancer la recherche
        searchProductsInstant(input);
    }
}

// Recherche instantanée de produits
async function searchProductsInstant(searchTerm) {
    if (!searchTerm || searchTerm.length < 2) {
        hideSearchResults();
        return;
    }
    
    try {
        const shopId = currentShopId || 3;
        const response = await fetch(`${API_ENDPOINTS.searchArticles}?search=${encodeURIComponent(searchTerm)}&shop_id=${shopId}`);
        
        if (response.ok) {
            const data = await response.json();
            
            if (Array.isArray(data) && data.length > 0) {
                displayProductSearchResults(data);
            } else if (data.data && Array.isArray(data.data) && data.data.length > 0) {
                displayProductSearchResults(data.data);
            } else if (data.items && Array.isArray(data.items) && data.items.length > 0) {
                displayProductSearchResults(data.items);
            } else {
                displayNoProductsFound();
            }
        } else {
            console.error('Erreur API:', response.status);
            displayNoProductsFound();
        }
    } catch (error) {
        console.error('Erreur recherche produits:', error);
        displayNoProductsFound();
    }
}


<script>
// Variables globales
let currentCartId = {{ app.session.get('current_cart_id', 288) }};
let currentCustomerId = null;
let currentShopId = {{ app.session.get('user') ? app.session.get('user').shop_id ?? 3 : 3 }};
let searchTimeout = null;
let searchMode = 'barcode'; // 'barcode' ou 'search'

// Configuration des endpoints - CORRECTION DES ROUTES
const API_ENDPOINTS = {
    getCartItems: '/api/pos/cart', // Route Symfony
    searchCustomer: '/api/pos/customer/find', // Route Symfony
    scanArticle: '/api/pos/scan', // Route Symfony
    searchArticles: 'http://localhost:3000/api/stock/cart-items', // API externe pour recherche
    increaseQuantity: '/api/pos/cart/item/increase', // Route Symfony
    decreaseQuantity: '/api/pos/cart/item/decrease', // Route Symfony
    removeItem: '/api/pos/cart/item/remove', // Route Symfony

        return;
    }
    
    if (!confirm(`Finaliser la vente pour ${totalAmount.toFixed(2)} € ?`)) return;
    
    // Demander le montant reçu
    const amount = prompt('Montant reçu par le client:', totalAmount.toFixed(2));
    
    if (!amount || isNaN(amount) || parseFloat(amount) < totalAmount) {
        showError('Montant insuffisant ou invalide');
        return;
    }
    
    const paymentData = {
        payments: [{
            method: 'cash',
            amount: parseFloat(amount),
            reference: 'caisse-' + new Date().getTime()
        }],
        discount: 0,
        loyalty_points_used: 0
    };
    
    debugLog('Données de paiement:', paymentData);
    
    try {
        const response = await fetch(API_ENDPOINTS.finalizeCart, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(paymentData)
        });
        
        if (response.ok) {
            const result = await response.json();
            debugLog('Réponse finalisation:', result);
            
            if (result.success) {
                showSuccess('Vente finalisée avec succès!');
                
                // Réinitialiser
                currentCartId = null;
                currentCustomerId = null;
                
                // Rafraîchir l'affichage
                setTimeout(() => {
                    loadActiveCart();
                }, 500);
                
                // Vider les champs client
                $('#client-search').val('');
                $('#client-info').html(`
                    <div class="text-center py-3 text-muted">
                        <i class="fas fa-user fa-2x mb-2"></i>
                        <p style="font-size: 0.9rem;">Aucun client sélectionné</p>
                    </div>
                `);
                
                $('#cart-id').text('#N/A');
                $('#cart-status').removeClass('bg-success').addClass('bg-secondary').text('Terminé');
                
                // Ouvrir le modal de ticket
                if (result.data) {
                    showReceipt(result.data);
                }
            } else {
                showError(result.message || 'Erreur lors de la finalisation');
            }
        } else {
            const error = await response.json();
            showError(error.message || 'Erreur lors de la finalisation');
        }
    } catch (error) {
        console.error('Erreur finalisation:', error);
        showError('Erreur lors de la finalisation');
    }
}

